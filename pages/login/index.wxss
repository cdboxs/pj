/**index.wxss**/
.loginbg{
  display: block;
  width: 100%;
}
.login{
  display: block;
  width: 90%;
  margin:50rpx auto;
}
.iconfont{
  font-size: 48rpx;
  color:#999;
}
.login view{
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
  margin:30rpx 0;
  border-bottom:1px solid #ddd;
}
.login view input{
  width: 100%;
  padding:10rpx 30rpx;
  color:#444;
  font-size: 28rpx;
}
.login button{
  color:#fff;
  margin-top:80rpx;
  background:#3682f4;
}
.copyright{
  width: 100%;
  color:#999;
  font-size: 24rpx;
  text-align: center;
  position: fixed;bottom:20rpx;left:0;
}
















